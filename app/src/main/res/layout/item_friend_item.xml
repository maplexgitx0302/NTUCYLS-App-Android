<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/item_add_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"

        >


        <ImageView
            android:id="@+id/friend_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/friend_information"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toLeftOf="@id/delete_button"
            android:layout_toRightOf="@+id/friend_photo"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/bamboo"
            android:gravity="left|center"
            android:paddingLeft="15sp"
            android:text="Button"
            android:textSize="20sp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/friend_space"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_delete_forever_24"
            />

        <Space
            android:id="@+id/friend_space"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>