<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.ProfileFragment">


    <ScrollView
        android:id="@+id/profile_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_profile" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/image_button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/bamboo"
                        android:text="Image"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <Space
                        android:layout_width="4dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/upload_button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/bamboo"
                        android:text="Update"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <Space
                        android:layout_width="4dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/edit_button"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/bamboo"
                        android:text="Edit"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/bamboo"
                android:text="帳號"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/profileAccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/bamboo"
                android:paddingLeft="1dp"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bamboo"
                android:text="名字"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/name_textfield"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:enabled="false"
                android:fontFamily="@font/bamboo"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="1dp"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bamboo"
                android:text="系級（簡寫）"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/grade_textfield"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:enabled="false"
                android:fontFamily="@font/bamboo"
                android:hint="Grade"
                android:inputType="textPersonName"
                android:paddingLeft="1dp"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bamboo"
                android:text="家"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/home_textfield"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:enabled="false"
                android:fontFamily="@font/bamboo"
                android:hint="Home"
                android:inputType="textPersonName"
                android:paddingLeft="1dp"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bamboo"
                android:text="部"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/department_textfield"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:enabled="false"
                android:fontFamily="@font/bamboo"
                android:hint="Department"
                android:inputType="textPersonName"
                android:paddingLeft="1dp"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bamboo"
                android:text="出隊次數"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/count_textfield"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:enabled="false"
                android:fontFamily="@font/bamboo"
                android:hint="Count"
                android:inputType="textPersonName"
                android:paddingLeft="1dp"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bamboo"
                android:text="第幾屆的新生"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/epoch_textfield"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:enabled="false"
                android:fontFamily="@font/bamboo"
                android:hint="1st?2nd?3rd?nth?"
                android:inputType="textPersonName"
                android:paddingLeft="1dp"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>